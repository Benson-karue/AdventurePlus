<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#7922161A"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/backpagearrow"
                    android:src="@drawable/baseline_arrow_back_24"
                    android:layout_marginTop="5dp"
                    android:layout_width="55dp"
                    android:layout_height="40dp"/>

                <TextView
                    android:id="@+id/idTVHeading"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="AdventurePlus+"
                    android:marqueeRepeatLimit="3"
                    android:textColor="@color/black"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    android:layout_marginStart="70dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
            </LinearLayout>

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Find your next destination :"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="@+id/idTVHeading"
                app:layout_constraintHorizontal_bias="0.042"
                app:layout_constraintStart_toStartOf="@+id/idTVHeading"
                app:layout_constraintTop_toBottomOf="@+id/idTVHeading" />
        </LinearLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="620dp"
        android:orientation="vertical"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout"
        app:layout_constraintVertical_bias="0.0">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:background="#1B01011B"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <!-- 1st row code-->

            <LinearLayout
                android:orientation="vertical"
                android:padding="2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

              <!--code to enable image scroll sideways-->
                <HorizontalScrollView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:src="@drawable/campingsite"
                                android:scaleType="fitXY"
                                android:layout_margin="5dp"
                                android:layout_width="150dp"
                                android:layout_height="200dp"/>
                            <ImageView
                                android:src="@drawable/campingsite02"
                                android:scaleType="fitXY"
                                android:layout_margin="5dp"
                                android:layout_width="150dp"
                                android:layout_height="200dp"/>
                            <ImageView
                                android:src="@drawable/campingsite03"
                                android:scaleType="fitXY"
                                android:layout_margin="5dp"
                                android:layout_width="150dp"
                                android:layout_height="200dp"/>
                            <ImageView
                                android:src="@drawable/campingsite04"
                                android:scaleType="fitXY"
                                android:layout_margin="5dp"
                                android:layout_width="150dp"
                                android:layout_height="200dp"/>
                        </LinearLayout>
                </HorizontalScrollView>


                <LinearLayout
                    android:orientation="horizontal"
                    android:elevation="10dp"
                    android:layout_marginStart="3dp"
                    android:layout_marginEnd="3dp"
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="70dp">
                   <TextView
                        android:drawableStart="@drawable/baseline_location_on_24"
                        android:text="Masaai Mara, \n Game camping"
                        android:textSize="15sp" android:textColor="@color/black"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:drawableEnd="@drawable/baseline_attach_money_24"
                        android:text="200"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="#A80D0D"
                        android:background="#617894D1"
                        android:layout_marginStart="25dp"
                        android:layout_marginTop="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                   <Button
                       android:id="@+id/HomeBookingBtn1"
                       android:layout_marginStart="30dp"
                       android:text="BOOK"
                       android:textSize="15sp"
                       android:backgroundTint="#C6091B7C"
                       android:layout_marginTop="12dp"
                        android:layout_width="wrap_content"
                        android:layout_height="48dp"/>
                </LinearLayout>
                <TextView
                    android:text="Spectacular natural diversity of wildlife and is the premier Kenya Safari location in East Africa"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    android:padding="7dp"
                    android:elevation="10dp"
                    android:textColor="@color/black"
                    android:background="#C0EFC9"
                    android:layout_marginStart="3dp"
                    android:layout_marginEnd="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"/>
            </LinearLayout>

            <!-- 2nd row code-->

            <LinearLayout
                android:orientation="vertical"
                android:padding="2dp"
                android:layout_marginTop="3dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!--code to enable image scroll sideways-->
                <HorizontalScrollView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:src="@drawable/lamuisland01"
                            android:scaleType="fitXY"
                            android:layout_margin="5dp"
                            android:layout_width="150dp"
                            android:layout_height="200dp"/>
                        <ImageView
                            android:src="@drawable/lamuisland"
                            android:scaleType="fitXY"
                            android:layout_margin="5dp"
                            android:layout_width="150dp"
                            android:layout_height="200dp"/>
                        <ImageView
                            android:src="@drawable/lamuisland02"
                            android:scaleType="fitXY"
                            android:layout_margin="5dp"
                            android:layout_width="150dp"
                            android:layout_height="200dp"/>
                        <ImageView
                            android:src="@drawable/lamu01"
                            android:scaleType="fitXY"
                            android:layout_margin="5dp"
                            android:layout_width="150dp"
                            android:layout_height="200dp"/>
                    </LinearLayout>
                </HorizontalScrollView>


                <LinearLayout
                    android:orientation="horizontal"
                    android:background="#36000000"
                    android:layout_marginStart="3dp"
                    android:layout_marginEnd="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="70dp">
                    <TextView
                        android:drawableStart="@drawable/baseline_location_on_24"
                        android:text="Lamu Old Town, \n Lamu Kenya"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:drawableEnd="@drawable/baseline_attach_money_24"
                        android:text="150"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="#A80D0D"
                        android:background="#8D7894D1"
                        android:layout_marginStart="25dp"
                        android:layout_marginTop="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <Button
                        android:id="@+id/HomeBookingBtn2"
                        android:layout_marginStart="30dp"
                        android:text="BOOK"
                        android:textSize="15sp"
                        android:backgroundTint="#C6091B7C"
                        android:layout_marginTop="12dp"
                        android:layout_width="wrap_content"
                        android:layout_height="45dp"/>
                </LinearLayout>
                <TextView
                    android:text="Lamu Old Town is the oldest and best-preserved Swahili settlement in East Africa, retaining its traditional functions"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:padding="7dp"
                    android:background="#C0EFC9"
                    android:layout_marginStart="3dp"
                    android:layout_marginEnd="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"/>
            </LinearLayout>


                <!-- 3nd row code-->

                <LinearLayout
                    android:orientation="vertical"
                    android:padding="2dp"
                    android:layout_marginTop="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <!--code to enable image scroll sideways-->
                    <HorizontalScrollView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:src="@drawable/hotairballon01"
                                android:scaleType="fitXY"
                                android:layout_margin="5dp"
                                android:layout_width="150dp"
                                android:layout_height="200dp"/>
                            <ImageView
                                android:src="@drawable/hotairballons"
                                android:scaleType="fitXY"
                                android:layout_margin="5dp"
                                android:layout_width="150dp"
                                android:layout_height="200dp"/>
                            <ImageView
                                android:src="@drawable/hotairballon02"
                                android:scaleType="fitXY"
                                android:layout_margin="5dp"
                                android:layout_width="150dp"
                                android:layout_height="200dp"/>
                            <ImageView
                                android:src="@drawable/hotairballon04"
                                android:scaleType="fitXY"
                                android:layout_margin="5dp"
                                android:layout_width="150dp"
                                android:layout_height="200dp"/>
                        </LinearLayout>
                    </HorizontalScrollView>


                    <LinearLayout
                        android:orientation="horizontal"
                        android:background="#36000000"
                        android:layout_marginStart="3dp"
                        android:layout_marginEnd="3dp"
                        android:layout_width="match_parent"
                        android:layout_height="70dp">
                        <TextView
                            android:drawableStart="@drawable/baseline_location_on_24"
                            android:text="Hot AirBallons, \n Game Rides"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:drawableEnd="@drawable/baseline_attach_money_24"
                            android:text="250"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="#A80D0D"
                            android:background="#7894D1"
                            android:layout_marginStart="25dp"
                            android:layout_marginTop="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <Button
                            android:id="@+id/HomeBookingBtn3"
                            android:layout_marginStart="32dp"
                            android:text="BOOK"
                            android:textSize="15sp"
                            android:backgroundTint="#C6091B7C"
                            android:layout_marginTop="12dp"
                            android:layout_width="wrap_content"
                            android:layout_height="45dp"/>
                    </LinearLayout>
                    <TextView
                        android:text="Against a backdrop of stunning sunrises, hot-air balloon flights in the wild give you a unique vantage point of the abundant wildlife living below."
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:padding="7dp"
                        android:background="#C0EFC9"
                        android:layout_marginStart="3dp"
                        android:layout_marginEnd="3dp"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"/>
                </LinearLayout>


                <!-- 4nd row code-->

                <LinearLayout
                    android:orientation="vertical"
                    android:padding="2dp"
                    android:layout_marginTop="3dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <!--code to enable image scroll sideways-->
                    <HorizontalScrollView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <ImageView
                                android:src="@drawable/mountain01"
                                android:scaleType="fitXY"
                                android:layout_margin="5dp"
                                android:layout_width="150dp"
                                android:layout_height="200dp"/>
                            <ImageView
                                android:src="@drawable/mountainclimbing"
                                android:scaleType="fitXY"
                                android:layout_margin="5dp"
                                android:layout_width="150dp"
                                android:layout_height="200dp"/>
                            <ImageView
                                android:src="@drawable/mountain02"
                                android:scaleType="fitXY"
                                android:layout_margin="5dp"
                                android:layout_width="150dp"
                                android:layout_height="200dp"/>
                            <ImageView
                                android:src="@drawable/mountain03"
                                android:scaleType="fitXY"
                                android:layout_margin="5dp"
                                android:layout_width="150dp"
                                android:layout_height="200dp"/>
                        </LinearLayout>
                    </HorizontalScrollView>


                    <LinearLayout
                        android:orientation="horizontal"
                        android:background="#36000000"
                        android:layout_width="match_parent"
                        android:layout_marginStart="3dp"
                        android:layout_marginEnd="3dp"
                        android:layout_height="70dp">
                        <TextView
                            android:drawableStart="@drawable/baseline_location_on_24"
                            android:text="Mountain Climbing, \n Mt.Kenya"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:drawableEnd="@drawable/baseline_attach_money_24"
                            android:text="600"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="#A80D0D"
                            android:background="#7894D1"
                            android:layout_marginStart="15dp"
                            android:layout_marginTop="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                        <Button
                            android:id="@+id/HomeBookingBtn4"
                            android:layout_marginStart="25dp"
                            android:text="BOOK"
                            android:textSize="14sp"
                            android:backgroundTint="#C6091B7C"
                            android:layout_marginTop="12dp"
                            android:layout_width="wrap_content"
                            android:layout_height="45dp"/>
                    </LinearLayout>
                    <TextView
                        android:text= "Discover the wild beauty of Mount Kenya National Park. Experience the magic of Africa's Second tallest mountain."
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:padding="7dp"
                        android:background="#C0EFC9"
                        android:layout_marginStart="3dp"
                        android:layout_marginEnd="3dp"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"/>
                </LinearLayout>



            </LinearLayout>

        </ScrollView>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>